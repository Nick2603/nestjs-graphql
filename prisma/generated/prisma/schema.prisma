generator client {
  provider        = "prisma-client-js"
  output          = "../generated/prisma"
  previewFeatures = ["prismaSchemaFolder", "driverAdapters"]
}

datasource db {
  provider = "postgresql"
  url      = env("DB_URL")
}

model User {
  id String @id @default(uuid())

  password String
  email    String @unique

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("users")
}
